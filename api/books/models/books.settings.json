{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "name": "Books",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": false,
      "required": true
    },
    "description": {
      "type": "text",
      "unique": false,
      "required": true
    },
    "price": {
      "type": "decimal",
      "unique": false,
      "required": true
    },
    "category": {
      "collection": "categories",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "SKU": {
      "type": "string",
      "unique": false,
      "required": false,
      "default": "N/A"
    },
    "in_stock": {
      "type": "integer",
      "default": 50
    },
    "sponsored": {
      "type": "boolean",
      "default": false,
      "unique": false
    },
    "e_book_epub": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "e_book_pdf": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "is_on_sale": {
      "type": "boolean",
      "default": false
    },
    "price_sale": {
      "type": "decimal",
      "required": false
    },
    "additional_info": {
      "type": "component",
      "repeatable": false,
      "component": "books.additional-info",
      "required": true
    },
    "author": {
      "model": "authors",
      "required": true
    },
    "publisher": {
      "model": "publishers"
    },
    "total_ebooks_sold": {
      "type": "integer",
      "default": 0,
      "private": true
    },
    "total_prints_sold": {
      "type": "integer",
      "default": 0,
      "private": true
    },
    "total_sold": {
      "type": "integer",
      "default": 0,
      "private": true
    },
    "available_ebook": {
      "type": "boolean",
      "required": true
    },
    "available_print": {
      "type": "boolean",
      "required": true
    }
  }
}