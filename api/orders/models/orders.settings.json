{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Orders",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "paypal_order_id": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "books": {
      "collection": "books"
    },
    "Book": {
      "type": "component",
      "repeatable": true,
      "component": "books.books"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "paypal_transaction_id": {
      "type": "string"
    },
    "Paypal_user": {
      "type": "component",
      "repeatable": false,
      "component": "paypal-user.paypal-user"
    },
    "order_type": {
      "type": "enumeration",
      "enum": [
        "ebook",
        "print"
      ],
      "required": true
    },
    "order_details": {
      "type": "json",
      "required": true,
      "private": true
    },
    "authors": {
      "private": true,
      "collection": "authors",
      "via": "orders",
      "dominant": true
    },
    "paypal_invoice": {
      "type": "component",
      "repeatable": false,
      "component": "shop.pay-pal-invoice"
    }
  }
}
